// base.config
// use this config file to modify process resource allocation


// PROCESS RESOURCES
process {

	// top-level configuration groups
	withLabel: "low" {
    	time = { 12.h * task.attempt }
    	memory = { 2.GB * task.attempt }
    	cpus = 2
	}

	withLabel: "tiny" {
		time = 1.h
		memory = 250.MB
		cpus = 1
	}

	withLabel: "finish" {
    	errorStrategy = { task.exitStatus in [140,143,137,104,134,139] ? 'retry' : 'finish' }
	}

	withLabel: "ignore" {
    	errorStrategy = { task.exitStatus in [140,143,137,104,134,139] ? 'retry' : 'ignore' }
	}


	// configuration for initial samtools sort, calmd, index
	withName: "preprocessing" {
	
		// label 'low'
		// label 'finish'
		maxRetries = 1
	}
	

	// configuration for masking (genomic or bisulfite)
	withName: "masking" {
	
		// label 'finish'
    	time = { 12.h * task.attempt }
    	memory = { 8.GB * task.attempt }
    	cpus = { 8 * task.attempt }
    	maxRetries = 2
	}


	// configuration for extracting fastq reads back from masked alignments
	withName: "extracting" {

		// label 'low'
		// label 'finish'
		maxRetries = 1
	}


	// configuration for khmer
	withName: "khmer" {

		// label 'low'
		// label 'finish'
		maxRetries = 1
	}


	// configuration for kwip
	withName: "kwip" {
	
		// label 'finish'
    	time = { 2.h * task.attempt }
    	memory = { 8.GB * task.attempt }
    	cpus = { 4 * task.attempt }
    	maxRetries = 2
	}


	// configuration for clustering kwip results
	withName: "clustering" {
	
		// label 'finish'
    	time = { 2.h * task.attempt }
    	memory = { 8.GB * task.attempt }
    	cpus = 2
    	maxRetries = 2
	}


	// configuration for samtools sort, index
	withName: "sorting" {
	
		// label 'low'
		// label 'finish'
		maxRetries = 1
	}


	// configuration for freebayes-parallel
	withName: "freebayes" {

		// label 'finish'
    	time = { 12.h * task.attempt }
    	memory = { 8.GB * task.attempt }
    	cpus = { 8 * task.attempt }
    	maxRetries = 2
	}


	// configuration for bcftools filtering
	withName: "bcftools" {
	
		// label 'low'
		// label 'finish'
		maxRetries = 1
	}
}